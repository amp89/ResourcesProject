	@Override
	public CurrentUser signInUser(User user) 
		User u = null;
		if(user.getEmail().length() > 1){
			//check email and password
			User u = em.createQuery("SELECT u FROM User u WHERE u.email = :email AND u.password = :password",User.class).setParameter("email",user.getEmail()).setParameter("password",user.getPassword()).getSingleResult();
		}else{
			User u = em.createQuery("SELECT u FROM User u WHERE u.un = :userName AND u.password = :password",User.class).setParameter("un",user.getUserName()).setParameter("password",user.getPassword()).getSingleResult();
			//check username and password
		}
	System.out.println("signIn dao " + u);

		
		return null;
	}

