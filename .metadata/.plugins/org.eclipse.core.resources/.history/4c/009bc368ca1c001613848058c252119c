addEventListener('load',function(e){
	console.log('loaded');
})


var submitButton = document.body.getElementById("submitButton");

console.log(submitButton.innerHTML);

submitButton.addEventListener('click',function(e){
	
	var username = "";
	var email = "";
	var password = "";
	var userInput = document.getElementById("user");
	var userPassword = document.getElementById("password");
	
	if(userInput.indexOf("@") > -1){
		email = userInput;
	}else{
		username = userInput;
	}
	
	//make user object from form data to login
	var userObject = {
		userName:username,
		email:email,
		password:password
	};
	//stringify the object
	var userJSON = JSON.stringify(userObject);
	
	
	var xhr = new XMLHttpRequest();

	
	xhr.open('POST','rest/signIn');
	xhr.setRequestHeader('Content-type','application/json');
	
	xhr.onreadystatechange = function(){
		if(xhr.readyState === 4){
			console.log("login complete")
		//maybe remove some stuff here then	
		}
	}
	
	xhr.send(userJSON);
	
});