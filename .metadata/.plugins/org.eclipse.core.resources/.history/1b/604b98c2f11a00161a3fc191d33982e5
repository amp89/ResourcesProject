package entityTesting;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;

import org.junit.After;
import org.junit.Before;
import org.junit.Test;

import static org.junit.Assert.assertEquals;

import entities.User;

public class EntityTest {
	EntityManagerFactory emf;
	EntityManager em;
	
	@Before
	public void setUp(){
		emf = Persistence.createEntityManagerFactory("resources");
		em = emf.createEntityManager();
	}
	
	//id
	@Test
	public void test() {
		assertEquals(em.find(User.class, 1000).getId(),1001);
	}
	
	//username
	@Test
	public void test() {
		assertEquals(em.find(User.class, 1000).getUserName(),"amp");
	}
	//firstname
	@Test
	public void test() {
		assertEquals(em.find(User.class, 1000).getFirstName(),"alex");
	}
	//lastname
	@Test
	public void test() {
		assertEquals(em.find(User.class, 1000).getLastName(),"peterson");
	}
	//email
	@Test
	public void test() {
		assertEquals(em.find(User.class, 1000).getEmail(),"mail@alexmpeterson.com");
	}
	//user_confirmation_key
	@Test
	public void test() {
		assertEquals(em.find(User.class, 1000).getUserConfirmationKey(),"userConfirmationKey");
	}
	
	//user type fk
	@Test
	public void test() {
		assertEquals(em.find(User.class, 1000).getId(),1000);
	}
	//date_joined
	@Test
	public void test() {
		assertEquals(em.find(User.class, 1000).getUserType(),"1463353351782");
	}
		
	@After
	public void tearDown(){
		em.close();
		emf.close();
	}

	
	
}
